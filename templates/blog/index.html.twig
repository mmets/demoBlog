{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <h1 class="display-4 text-center my-4"> Liste Articles</h1>        
    
    <div class="row d-flex justify-content-around">

        {% for data in articles %}

            {# data est une variable de réception des données d'article issues du controller à chaque tour de boucle#}

            <div class="card mb-2 text-center" style="width: 18rem;">
                <img src="{{ data.image }}" class="card-img-top" alt="...">
                <div class="card-body">
                <h5 class="card-title">{{ data.title }}</h5>
                <p class="card-text">{{ data.text }}</p>
                <p class="card-text">{{ data.content|raw }}</p>
                <p class="card-text">Posté le {{ data.createdAt|date('d-m-Y à H:i:s') }}</p>
                <a href="{{ path('blog_show', {'id':data.id}) }}" class="btn btn-primary">Voir plus...</a>
                {# La route blog_show attend un id en url pour pouvoir pointer vers l'article correspondant
                On insère donc {'id':data.id} #}
                </div>
            </div>
        {% endfor %}
    </div>
    
{% endblock %}
